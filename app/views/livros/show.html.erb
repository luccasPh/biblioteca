<%- model_class = Livro -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <div class="jumbotron"style="
    padding-top: 10px;
    padding-left: 10px;
    padding-bottom: 10px;
    padding-right: 10px;
    margin-bottom: 20px;
">
    <dt style="width: 60px;"><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
    <dd style="margin-left: 80px;"><%= @livro.titulo %></dd>
  </div>
  <div class="jumbotron"style="
    padding-top: 10px;
    padding-left: 10px;
    padding-bottom: 10px;
    padding-right: 10px;
    margin-bottom: 20px;
">
    <dt style="width: 60px;"><strong><%= model_class.human_attribute_name(:autor) %>:</strong></dt>
    <dd style="margin-left: 80px;"><%= @livro.autor %></dd>
  </div>
  <div class="jumbotron"style="
    padding-top: 10px;
    padding-left: 10px;
    padding-bottom: 10px;
    padding-right: 10px;
    margin-bottom: 20px;
">
    <dt style="width: 60px;"><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
    <dd style="margin-left: 80px;"><%= @livro.codigo %></dd>
  </div>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              livros_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_livro_path(@livro), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              livro_path(@livro),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
