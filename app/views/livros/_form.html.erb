<%= form_for @livro, :html => { :class => "form-horizontal livro" } do |f| %>

  <% if @livro.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@livro.errors.count, "error") %> prohibited this livro from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @livro.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="jumbotron" style="
      padding-left: 20px;
      padding-top: 20px;
      padding-right: 20px;
      padding-bottom: 20px;
      width: 340px;
      margin-bottom: 0px;
      ">
    <div class="form-group">
      <label for="aluno_titulo">Titulo:</label>
      <div class="col-lg-10" style="padding-left: 0px;width: 320px;">
        <%= f.text_field :titulo, :class => 'form-control' %>
      </div>
      <%=f.error_span(:titulo) %>
    </div>
    <div class="form-group">
      <label for="livro_autor">Autor:</label>
      <div class="col-lg-10" style="padding-left: 0px;width: 250px;">
        <%= f.text_field :autor, :class => 'form-control' %>
      </div>
      <%=f.error_span(:autor) %>
    </div>
    <div class="form-group">
     <label for="livro_codigo">Codigo:</label>
      <div class="col-lg-10" style="padding-left: 0px;width: 250px;">
        <%= f.number_field :codigo, :class => 'form-control',
            :oninput => "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);",
            :maxlength => "8" %>
      </div>
      <%=f.error_span(:codigo) %>
    </div>
    </br>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10" style="padding-left: 0px;width: 250px;margin-left: 0px">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn btn-default' %>
      </div>
    </div>
  </div>

<% end %>
