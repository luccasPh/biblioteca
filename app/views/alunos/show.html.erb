<%- model_class = Aluno -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <div class="jumbotron"style="
    padding-top: 10px;
    padding-left: 10px;
    padding-bottom: 10px;
    padding-right: 10px;
    margin-bottom: 20px;
">
    <dt style="width: 110px;"><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
    <dd style="margin-left: 120px;"><%= @aluno.nome %></dd>
  </div>
  <div class="jumbotron"style="
    padding-top: 10px;
    padding-left: 10px;
    padding-bottom: 10px;
    padding-right: 10px;
    margin-bottom: 20px;
">
    <dt style="width: 110px;"><strong><%= model_class.human_attribute_name(:matricula) %>:</strong></dt>
    <dd style="margin-left: 120px;"><%= @aluno.matricula %></dd>
  </div>
  <div class="jumbotron"style="
    padding-top: 10px;
    padding-left: 10px;
    padding-bottom: 10px;
    padding-right: 10px;
    margin-bottom: 20px;
">
    <dt style="width: 110px;"><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
    <dd style="margin-left: 120px;"><%= @aluno.email %></dd>
  </div>
  <div class="jumbotron"style="
    padding-top: 10px;
    padding-left: 10px;
    padding-bottom: 10px;
    padding-right: 10px;
    margin-bottom: 20px;
">
    <dt style="width: 110px;"><strong><%= model_class.human_attribute_name(:telefone) %>:</strong></dt>
    <dd style="margin-left: 120px;"><%= @aluno.telefone %></dd>
  </div>
  <div class="jumbotron"style="
    padding-top: 10px;
    padding-left: 10px;
    padding-bottom: 10px;
    padding-right: 10px;
    margin-bottom: 20px;
">
    <dt style="width: 110px;"><strong><%= model_class.human_attribute_name(:emprestimos) %>:</strong></dt>
    <% @aluno.emprestimos.each do |emprestimos|%>
        <dd style="margin-left: 120px;"><%= link_to emprestimos.livro_titulo, emprestimo_path(emprestimos)%></dd>
    <% end %>
  </div>
</dl>


<%= link_to t('.back', :default => t("helpers.links.back")),
              alunos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_aluno_path(@aluno), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              aluno_path(@aluno),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
